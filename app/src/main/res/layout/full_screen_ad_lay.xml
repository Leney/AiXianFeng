<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#00000000"
             android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_ad_banner_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        fresco:actualImageScaleType="fitXY"/>

    <TextView
        android:id="@+id/home_ad_banner_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="#33ffffff"
        android:padding="2dp"
        android:text="广告"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/home_ad_banner_close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="5dp"
        android:src="@drawable/clean_xxx"/>

    <com.bjzcht.lovebeequick.gui.view.CountDownTextView2
        android:id="@+id/home_ad_banner_count_down_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#47422e"
        android:text="5s"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"/>

</FrameLayout>