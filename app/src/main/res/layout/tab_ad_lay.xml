<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00000000"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="310dp"
        android:layout_height="210dp">


        <FrameLayout
            android:id="@+id/home_ad_banner_lay"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="left|bottom">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/home_ad_banner_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@drawable/icon_default"
                fresco:placeholderImageScaleType="fitXY"/>

            <TextView
                android:id="@+id/home_ad_banner_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="#33ffffff"
                android:padding="2dp"
                android:text="广告"
                android:textColor="@color/white"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/home_ad_banner_close_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/clean_xxx"/>
    </FrameLayout>

</LinearLayout>